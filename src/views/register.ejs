<!DOCTYPE html>
<html lang="en" class="">

<head>
    <%- include("partials/head") %>
</head>

<body>
    <div id="app">
        <section class="is-hero-bar">
            <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
                <h1 class="title">Register</h1>
            </div>
        </section>

        <section class="section main-section">
            <div class="card mb-6">
                <header class="card-header my-auto">
                    <p class="card-header-title">
                        <span class="icon"><i class="mdi mdi-account-multiple"></i></span>
                        Forms
                    </p>
                    <div class="my-auto flex justify-center mt-2">
                        <a href="/login">
                            <button type="button" class="text-white bg-blue-500 hover:bg-blue-600 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">
                                Login
                            </button>
                        </a>
                    </div>
                </header>
                <% if (msg !== undefined && msg !== "Register berhasil !!")
                    { %>
                <p class="mx-auto text-center bg-red-500 w-3/4 rounded-md p-1 mt-4 text-md font-semibold">
                    <%= msg %>
                </p>
                <% } else if (msg === "Register berhasil !!") {%>
                <p class="mx-auto text-center bg-green-500 w-3/4 rounded-md p-1 mt-4 text-md font-semibold">
                    <%= msg %> <br />
                    Silahkan lanjutkan klik tombol <b><i>Login.</i></b>
                </p>
                <% } else { %>
                <p></p>
                <% } %>
                <div class="card-content">
                    <form method="post" action="/register">
                        <div class="field">
                            <div class="field-body">
                                <div class="field">
                                    <div class="control icons-left">
                                        <input class="input" type="text" name="nama" placeholder="Nama" />
                                        <span class="icon left"><i class="mdi mdi-account"></i></span>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control icons-left icons-right">
                                        <input class="input" type="email" name="email" placeholder="Email" />
                                        <span class="icon left"><i class="mdi mdi-mail"></i></span>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control icons-left icons-right">
                                        <input class="input" type="text" name="nik" placeholder="NIK" />
                                        <span class="icon left"><i class="mdi mdi-mail"></i></span>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control icons-left icons-right">
                                        <input class="input" type="text" name="alamat" placeholder="Alamat" />
                                        <span class="icon left"><i class="mdi mdi-mail"></i></span>
                                    </div>
                                </div>
                                <label class="text-md font-semibold" for="tgl_lahir">Tanggal Lahir :
                                </label>
                                <div class="field">
                                    <div class="control icons-left icons-right">
                                        <input class="focus:outline-none text-sm" type="date" name="tgl_lahir" placeholder="Tanggal Lahir" />
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control icons-left icons-right">
                                        <input class="input" type="tel" name="nomor_telepon" placeholder="Nomor HP/Telepon" />
                                        <span class="icon left"><i class="mdi mdi-mail"></i></span>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control icons-left icons-right">
                                        <input class="input" type="password" name="password" placeholder="Password" />
                                        <span class="icon left"><i class="mdi mdi-mail"></i></span>
                                    </div>
                                </div>
                                <div class="field">
                                    <div class="control icons-left icons-right">
                                        <input class="input" type="password" name="konfirmasi_password" placeholder="Konfirmasi Password" />
                                        <span class="icon left"><i class="mdi mdi-mail"></i></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="field grouped">
                            <div class="control">
                                <button type="submit" class="text-white bg-green-500 hover:bg-green-600 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">
                                    Submit
                                </button>
                            </div>
                            <div class="control">
                                <button type="reset" class="text-white bg-red-500 hover:bg-red-600 font-medium rounded-lg text-sm px-5 py-2.5 me-2 mb-2">
                                    Reset
                                </button>
                            </div>
                        </div>
                    </form>
                </div>
            </div>
        </section>
        <%- include("partials/footer") %>
    </div>
    <%- include("partials/script") %>
</body>

</html>