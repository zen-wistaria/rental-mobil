<!DOCTYPE html>
<html lang="en" class="">
  <head>
    <%- include("partials/head") %>
  </head>
  <body>
    <div id="app">
      <section class="is-hero-bar">
        <div
          class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0"
        >
          <h1 class="title">Register</h1>
        </div>
      </section>

      <section class="section main-section">
        <div class="card mb-6">
          <header class="card-header">
            <p class="card-header-title">
              <span class="icon"><i class="mdi mdi-ballot"></i></span>
              Forms
            </p>
            <a href="/login" title="Login">
              <button class="button blue">Login</button>
            </a>
          </header>
          <p class="label" style="text-align: center"><%= msg %></p>
          <div class="card-content">
            <form method="post" action="/register">
              <div class="field">
                <div class="field-body">
                  <div class="field">
                    <div class="control icons-left">
                      <input
                        class="input"
                        type="text"
                        name="nama"
                        placeholder="Nama"
                      />
                      <span class="icon left"
                        ><i class="mdi mdi-account"></i
                      ></span>
                    </div>
                  </div>
                  <div class="field">
                    <div class="control icons-left icons-right">
                      <input
                        class="input"
                        type="email"
                        name="email"
                        placeholder="Email"
                      />
                      <span class="icon left"
                        ><i class="mdi mdi-mail"></i
                      ></span>
                    </div>
                  </div>
                  <div class="field">
                    <div class="control icons-left icons-right">
                      <input
                        class="input"
                        type="text"
                        name="nik"
                        placeholder="NIK"
                      />
                      <span class="icon left"
                        ><i class="mdi mdi-mail"></i
                      ></span>
                    </div>
                  </div>
                  <div class="field">
                    <div class="control icons-left icons-right">
                      <input
                        class="input"
                        type="text"
                        name="alamat"
                        placeholder="Alamat"
                      />
                      <span class="icon left"
                        ><i class="mdi mdi-mail"></i
                      ></span>
                    </div>
                  </div>
                  <label class="label" for="tgl_lahir">Tanggal Lahir :</label>
                  <div class="field">
                    <div class="control icons-left icons-right">
                      <input
                        class="input"
                        type="date"
                        name="tgl_lahir"
                        placeholder="Tanggal Lahir"
                      />
                      <span class="icon left"
                        ><i class="mdi mdi-mail"></i
                      ></span>
                    </div>
                  </div>
                  <div class="field">
                    <div class="control icons-left icons-right">
                      <input
                        class="input"
                        type="tel"
                        name="nomor_telepon"
                        placeholder="Nomor HP/Telepon"
                      />
                      <span class="icon left"
                        ><i class="mdi mdi-mail"></i
                      ></span>
                    </div>
                  </div>
                  <div class="field">
                    <div class="control icons-left icons-right">
                      <input
                        class="input"
                        type="password"
                        name="password"
                        placeholder="Password"
                      />
                      <span class="icon left"
                        ><i class="mdi mdi-mail"></i
                      ></span>
                    </div>
                  </div>
                  <div class="field">
                    <div class="control icons-left icons-right">
                      <input
                        class="input"
                        type="password"
                        name="konfirmasi_password"
                        placeholder="Konfirmasi Password"
                      />
                      <span class="icon left"
                        ><i class="mdi mdi-mail"></i
                      ></span>
                    </div>
                  </div>
                </div>
              </div>
              <div class="field grouped">
                <div class="control">
                  <button type="submit" class="button green">Submit</button>
                </div>
                <div class="control">
                  <button type="reset" class="button red">Reset</button>
                </div>
              </div>
            </form>
          </div>
        </div>
      </section>
      <%- include("partials/footer") %>
    </div>
    <%- include("partials/script") %>
  </body>
</html>
