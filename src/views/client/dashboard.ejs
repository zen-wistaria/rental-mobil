<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head") %>
</head>

<body>
    <div id="app">
        <header><%- include('partials/header') %></header>

        <section class="is-hero-bar">
            <div class="flex flex-col md:flex-row items-center justify-between space-y-6 md:space-y-0">
                <h1 class="title">Dashboard</h1>
            </div>
        </section>

        <section class="section main-section">
            <div class="grid gap-10 grid-cols-1 lg:grid-cols-2 mb-6">
                <div class="card">
                    <div class="card-content">
                        <div class="flex items-center justify-between">
                            <div class="widget-label">
                                <h3>Total Mobil</h3>
                                <h1><%= data.total_cars %></h1>
                            </div>
                            <span class="icon widget-icon text-blue-500"><i class="mdi mdi-car mdi-48px"></i></span>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        <div class="flex items-center justify-between">
                            <div class="widget-label">
                                <h3>Total Booking</h3>
                                <h1><%= data.total_booking %></h1>
                            </div>
                            <span class="icon widget-icon text-red-500"><i class="mdi mdi-clipboard-check mdi-48px"></i></span>
                        </div>
                    </div>
                </div>
                <div class="card">
                    <div class="card-content">
                        <div class="flex items-center justify-between">
                            <div class="widget-label">
                                <h3>Total Transaksi</h3>
                                <h1><%= data.total_transaction %></h1>
                            </div>
                            <span class="icon widget-icon text-yellow-500"><i class="mdi mdi-clipboard-flow mdi-48px"></i></span>
                        </div>
                    </div>
                </div>
            </div>

        </section>
        <%- include("partials/footer") %>
    </div>
    <%- include("partials/script") %>
</body>

</html>