# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
charset = utf-8
indent_style = space
indent_size = 2
insert_final_newline = true
trim_trailing_whitespace = true

[{*.js,*.jsx,*.json}]
indent_size = 4

[{*.js,*.jsx}]
block_comment_start = /**
block_comment = *
block_comment_end = */

[{*.py,*.ipynb}]
indent_size = 4

[*.pas]
indent_size = 4

[*.{yml,yaml}]
indent_size = 2

[*.{md,txt}]
end_of_line = crlf
indent_size = 2
trim_trailing_whitespace = false

[*.{cmd,bat}]
indent_size = 2
end_of_line = crlf
